<% @products.each do |p| %>
  <div id="product-<%= p.id %>">
    <div class="name"><b><%= p.name + ":" %></b></div>
    <div id="description-<%= p.id %>"><%= truncate p.description %></div>
    <button class="js-more" name="More Info" title="More Info" data-id="<%= p.id %>">More Info</button>
  </div>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-more").on('click', function() {
      let id = $(this).data("id");
      $.get("/products/" + id + "/description", function(data) {
        $("#description-" + id).html(data);
      });
      $.get("/products/" + id + "/inventory", function(data) {
        let inv = data === "True" ? " Available" : " Sold Out";
        $("#description-" + id).append(inv);
      });
    });
  });
</script>
